{
  "defaultSeverity": "warn",
  "extends": [
    "tslint:recommended"
  ],
  "linterOptions": {
    "exclude": [
      "node_modules/**",
      "**/*.json",
      "src/components/blockExplorer/pbs/*.*"
    ]
  },
  "rules": {
    "quotemark": [
      true,
      "double"
    ],
    "indent": [
      true,
      "spaces",
      2
    ],
    "interface-name": false,
    "ordered-imports": false,
    "object-literal-sort-keys": false,
    "object-literal-key-quote": [
      false,
      "always"
    ],
    "no-consecutive-blank-lines": true,
    "curly": [
      true,
      "ignore-same-line"
    ],
    "semicolon": [
      true,
      "never"
    ],
    "member-access": false,
    "no-console": [
      true,
      {
        "allow": [
          "warn",
          "error"
        ]
      }
    ],
    "max-classes-per-file": false,
    "variable-name": [
      true,
      "ban-keywords",
      "allow-leading-underscore"
    ]
  }
}